<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hamals_robot">

  <!-- ===================== -->
  <!-- CHASSIS PROPERTIES -->
  <!-- ===================== -->
  <xacro:property name="chassis_length" value="0.22"/>
  <xacro:property name="chassis_width"  value="0.156"/>
  <xacro:property name="chassis_height" value="0.09"/>

  <!-- ===================== -->
  <!-- BASE FOOTPRINT (Z = 0, zemin referansÄ±) -->
  <!-- ===================== -->
  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.045"/>
  </joint>

  <!-- ===================== -->
  <!-- BASE LINK -->
  <!-- ===================== -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
      <material name="navy">
        <color rgba="0.05 0.1 0.4 1.0"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.02" ixy="0" ixz="0"
               iyy="0.02" iyz="0"
               izz="0.02"/>
    </inertial>
  </link>

  <!-- ===================== -->
  <!-- LEFT WHEEL -->
  <!-- ===================== -->
  <link name="left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.030"/>
      </geometry>
      <material name="red_tire">
        <color rgba="0.85 0.0 0.0 1.0"/>
      </material>
    </visual>

    <visual>
      <origin xyz="0 0 0.002" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.020" length="0.040"/>
      </geometry>
      <material name="white_rim">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.039"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.095 -0.028"/>
    <axis xyz="1 0 0"/>
  </joint>

  <!-- ===================== -->
  <!-- RIGHT WHEEL -->
  <!-- ===================== -->
  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.030"/>
      </geometry>
      <material name="red_tire">
        <color rgba="0.85 0.0 0.0 1.0"/>
      </material>
    </visual>

    <visual>
      <origin xyz="0 0 0.002" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.020" length="0.040"/>
      </geometry>
      <material name="white_rim">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.039"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.095 -0.028"/>
    <axis xyz="1 0 0"/>
  </joint>

  <!-- ===================== -->
  <!-- RIGHT CASTER -->
  <!-- ===================== -->
  <link name="right_caster_link">
    <visual>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <material name="gray">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_caster_link"/>
    <origin xyz="0.08 0.0 -0.045"/>
  </joint>

  <!-- ===================== -->
  <!-- LEFT CASTER -->
  <!-- ===================== -->
  <link name="left_caster_link">
    <visual>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <material name="gray">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_caster_link"/>
    <origin xyz="-0.08 0.0 -0.045"/>
  </joint>

  <!-- ===================== -->
  <!-- LIDAR MOUNT -->
  <!-- ===================== -->
  <link name="lidar_mount_link">
    <visual>
      <geometry>
        <box size="0.06 0.06 0.015"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="0.06 0.06 0.015"/>
      </geometry>
    </collision>
  </link>

  <joint name="lidar_mount_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_mount_link"/>
    <origin xyz="0 0 0.0525"/>
  </joint>

  <!-- ===================== -->
  <!-- LIDAR -->
  <!-- ===================== -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.031" length="0.03"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="lidar_mount_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.015"/>
  </joint>

</robot>
